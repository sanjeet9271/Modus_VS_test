{
  "name": "moduscoder",
  "displayName": "Modus Coder",
  "description": "Modus Coder as VS code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "moduscoder.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "moduscoder.authenticate",
        "title": "Authenticate"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "moduscoder-sidebar-container",
          "title": "Modus Coder",
          "icon": "./src/media/vslogo.png"
        }
      ]
    },
    "views": {
      "moduscoder-sidebar-container": [
        {
          "type": "webview",
          "id": "moduscoder-sidebar",
          "name": "",
          "icon": "./src/media/vslogo.png"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd modus && npm install",
    "start:webview": "cd modus && npm run start",
    "build:webview": "cd modus && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/randomstring": "^1.3.0",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@trimble-oss/trimble-id-react": "^1.0.0",
    "crypto-js": "^4.2.0",
    "randomstring": "^1.3.1",
    "uuid": "^11.1.0"
  }
}
